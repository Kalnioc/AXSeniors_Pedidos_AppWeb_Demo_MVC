@model AXSeniors_Pedidos_Demo_ENTITY.ClienteBE

<div class="container mt-4">
    <h2>Agregar Cliente</h2>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>Nombre</label>
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group">
            <label>Apellido</label>
            @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group">
            <label>Documento</label>
            @Html.TextBoxFor(m => m.NumeroDocumento, new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group">
            <label>Dirección</label>
            @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Teléfono</label>
            @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-success mt-3">Guardar</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary mt-3">Cancelar</a>
    }
</div>
