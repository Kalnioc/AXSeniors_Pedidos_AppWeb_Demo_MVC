@model AXSeniors_Pedidos_Demo_ENTITY.PedidoCabeceraBE

<h2>Detalle del Pedido</h2>
<p><strong>Cliente:</strong> @Model.Cliente.NombreCompleto</p>
<p><strong>Fecha:</strong> @Model.FechaPedido.ToShortDateString()</p>
<p><strong>Estado:</strong> @Model.EstadoNombre</p>

<table class="table">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Descuento</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PedidoDetalleLista)
        {
            <tr>
                <td>@item.Producto.Nombre</td>
                <td>@item.CantidadItem</td>
                @*<td>@item.PrecioUnitario.ToString("C")</td>*@
                <td>@($"S/ {item.PrecioUnitario:0.00}")</td>
                <td>@item.DescuentoItem %</td>
                @*<td>@item.TotalItem.ToString("C")</td>*@
                <td>@($"S/ {item.TotalItem:0.00}")</td>
            </tr>
        }
    </tbody>
</table>

@*<p><strong>Subtotal:</strong> @Model.Subtotal.ToString("C")</p>
<p><strong>Impuestos:</strong> @Model.Impuestos.ToString("C")</p>
<p><strong>Total:</strong> @Model.Total.ToString("C")</p>*@
<p><strong>Subtotal:</strong> @($"S/ {Model.Subtotal:0.00}")</p>
<p><strong>Impuestos:</strong> @($"S/ {Model.Impuestos:0.00}")</p>
<p><strong>Total:</strong> @($"S/ {Model.Total:0.00}")</p>

<a href="@Url.Action("Index")" class="btn btn-outline-secondary">Volver</a>
