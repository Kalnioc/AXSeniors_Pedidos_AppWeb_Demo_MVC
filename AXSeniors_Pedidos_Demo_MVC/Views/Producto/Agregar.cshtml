@model AXSeniors_Pedidos_Demo_ENTITY.ProductoBE

<div class="container mt-4">
    <h2>Agregar Producto</h2>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>Nombre</label>
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group">
            <label>Descripción</label>
            @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group">
            <label>Precio</label>
            @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", type = "number", step = "0.01" })
        </div>
        <div class="form-group">
            <label>Stock</label>
            @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number" })
        </div>
        <button type="submit" class="btn btn-success mt-3">Guardar</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary mt-3">Cancelar</a>
    }
</div>
